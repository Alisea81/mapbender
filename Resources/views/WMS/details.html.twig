{% extends 'MBWMSBundle:WMS:base.html.twig' %} 

{% block title %}Details for {{ wms.getTitle() }} {% endblock %}
{% block heading %}WMS detail{% endblock %}

{% block content %}

<fieldset>
<legend>WMS-Detail</legen>	
<div class="wms">
        
        <table>
        <tr>
        <th>WMS Titel</th>
        <th>WMS Name</th>
        <th>Abstract</th>
        <th>Preview</th>
        </tr>
        
        <tr>
        <td><h1 class="title" ><a href="{{ wms.getId() }}" target="_new">{{ wms.getTitle() }}</a></h1></td>
        
        <td><h2 class="name">({{ wms.getName() }})</h2></td>
         
        <td><p class="abstract">{{ wms.getAbstract() }}</p></td>
        
        <td><div id="map" class="smallmap"></div></td>
        </tr>
        
        </table>
</fieldset>
        
     <p class="fees">{{ wms.getFees() }}</p>
     <p class="accessConstraints">{{ wms.getAccessConstraints() }}</p>
     <div class="contact"></div>


<fieldset>
<legend>Edit</legend>
    <ul class="actions">
        <li><a href="{{ path('mb_wms_showdelete',{'id':wms.getId()}) }}">{% trans %}Delete{% endtrans %}</a></li>
        <li><a href="#">{% trans %}Edit{% endtrans %}</a></li>
        <li><a href="#">{% trans %}Update{% endtrans %}</a></li>
    </ul>
</fieldset>

     
  <fieldset>
        <legend>Keywords</legend>
        <ul class="keywords">
        {#
         {% for keyword in wms.getKeywords() %}
            <li  class="keyword">{{ keyword }}></li>
