		</fieldset-->
		
		
		
        <h2>{% trans %}Layerdetails{% endtrans %}</h2>
        {% for layer in wms.getLayer() %}
          {% include "MBWMSBundle:WMS:layerdetails.html.twig" %}
        {% endfor %}
    </div>
{% endblock %}

