<ul class="itemLevel{{itemLevel}} list {% if itemLevel > 1 %}closed{% endif %}">
  <li class="subTitle">{{ layer.title }}</li>
  <li>
    <span class="labelAlt">{{"Name" | trans }}:</span>
    <span class="metaText">{{ layer.name }}</span>
  </li>
  <li>
    <span class="labelAlt">{{"Title" | trans }}:</span>
    <span class="metaText">{{ layer.title }}</span>
  </li>
  <li>
    <span class="labelAlt">{{"Abstract" | trans }}:</span>
    <span class="metaText">{{ layer.abstract }}</span>
  </li>
  <li>
    <span class="labelAlt">{{"Queryable" | trans }}:</span>
    <span class="metaText">{{ layer.queryable }}</span>
  </li>
  <li>
    <span class="labelAlt">{{"Cascaded" | trans }}:</span>
    <span class="metaText">{{ layer.cascaded }}</span>
  </li>
  <li>
    <span class="labelAlt">{{"Opaque" | trans }}:</span>
    <span class="metaText">{{ layer.opaque }}</span>
  </li>
  <li>
    <span class="labelAlt">{{"NoSubset" | trans }}:</span>
    <span class="metaText">{{ layer.noSubset }}</span>
  </li>
  <li>
    <span class="labelAlt">{{"FixedWidth" | trans }}:</span>
    <span class="metaText">{{ layer.fixedWidth }}</span>
  </li>
  <li>
    <span class="labelAlt">{{"FixedHeight" | trans }}:</span>
    <span class="metaText">{{ layer.fixedHeight }}</span>
  </li>
  <li>
    <span class="labelAlt">{{ "LatlonBounds" | trans }}:</span>
    {% if layer.latlonBounds != null %}
      <span class="metaText">{{ layer.latlonBounds.srs }}</span>
      <span class="metaText">{{ layer.latlonBounds.minx }},</span>
      <span class="metaText">{{ layer.latlonBounds.miny }},</span>
      <span class="metaText">{{ layer.latlonBounds.maxx }},</span>
      <span class="metaText">{{ layer.latlonBounds.maxy }}</span>
    {% endif %}
  </li>
  <li>
    <span class="labelAlt">{{ "BoundingBox" | trans }}:</span>
    <ul class="left">
      {% for bbox in layer.boundingBoxes %}
        <li>
          <span class="metaText">{{ bbox.srs }} {{ bbox.minx }},{{ bbox.miny }},{{ bbox.maxx }},{{ bbox.maxy }}</span>
        </li>
      {% endfor %}
    </ul>
  </li>
  <li>
    <span class="labelAlt">{{ "Srs" | trans }}:</span>
    {% for srs in layer.srs %}
      {% if not loop.first %},{% endif %}<span class="metaText">{{ srs }}</span>
    {% endfor %}
  </li>
  <li>
    <span class="labelAlt">{{ "Styles" | trans }}:</span>
    {% if layer.styles|length > 0 %}
      {% for style in layer.styles %}
        {% if not loop.first %}<br/>{% endif %}
        <ul class="left">
          <li><span class="metaText">{{ "Name" | trans }}: {{ style.name }}</span></li>
          <li><span class="metaText">{{ "Title" | trans }}</dt>: {{ style.title }}</span></li>
          <li><span class="metaText">{{ "Abstract" | trans }}: {{ style.abstract }}</span></li>
          <li>
            <span class="metaText">
              {{ "LegendUrl" | trans }}: 
              {{ style.legendUrl.width }}X{{ style.legendUrl.height }}
              {{ style.legendUrl.onlineResource.format }} {{ style.legendUrl.onlineResource.href }}
            </span>
          </li>
        </ul>
        <span class="metaText">
          {{ "StyleSheetUrl" | trans }}:

          {% if layer.styleSheetUrl is defined %}
            {{ style.styleSheetUrl.format }} {{ style.styleSheetUrl.href }}
          {% endif %}<br/>
        </span>

        <span class="metaText">
          {{ "StyleUrl" | trans }}:
          {% if layer.styleUrl is defined %}
            {{ style.styleUrl.format }} {{ style.styleUrl.href }}
          {% endif %}
        </span>
        {% endfor %}
    {% endif %}
  </li>
  {% if layer.scale is defined and layer.scale != '' %}
    <li>
      <span class="labelAlt">{{ "Scale" | trans }}:</span>
      <span class="metaText">
        {{ "Min" | trans }}:{{ layer.scale.min }}<br/>
        {{ "Max" | trans }}:{{ layer.scale.max }}</span>
    </li>
  {% endif %}
  {% if layer.scaleHint is defined and layer.scaleHint != '' %}
  <li>
    <span class="labelAlt">{{ "ScaleHint" | trans }}:</span>
    <span class="metaText">
      {{ "Min" | trans }}:{{ layer.scaleHint.min }}<br/>
      {{ "Max" | trans }}:{{ layer.scaleHint.max }}
    </span>
  {% endif %}
  </li>
  <li>
    <span class="labelAlt">{{ "Attribution" | trans }}:</span>
    {% if layer.attribution is defined and layer.attribution != '' %}
      <ul class="left">
        <li>
          <span class="metaText">{{ "Title" | trans }}:{{ layer.attribution.title }}</span>
        </li>
        <li>
          <span class="metaText">{{ "OnlineResource" | trans }}:{{ layer.attribution.onlineResource }}</span>
        </li>
        <li>
          <span class="metaText">
            {{ "LogoUrl" | trans }}:
            {{ layer.attribution.logoUrl.width }}X{{layer.attribution.logoUrl.height }}
            {{ layer.attribution.logoUrl.onlineResource.format }} {{ layer.attribution.logoUrl.onlineResource.href }}
          </span>
        </li>
      </ul>
    {% endif %}
  </li>
  <li>
    <span class="labelAlt">{{ "Identifier" | trans }}:</span>
    {% if layer.identifier is defined  %}
      <ul>
        {% for identifier in layer.identifier %}
          {% if identifier.authority is defined and identifier.authority != '' %}
            <li>
              <span class="metaText">
                {{ "Authority" | trans }}: 
                {{ "Url" | trans }} {{ identifier.authority.url }}
                {{ "Name" | trans }} {{ identifier.authority.name }}
              </span>
            </li>
          {% endif %}
          {% if identifier.value is defined %}
            <li><span class="metaText">{{ "Value" | trans }}: {{ identifier.value }}</span></li>
          {% endif %}
        {% endfor %}
      </ul>
    {% endif %}
    <span class="metaText"></span>
  </li>
  <li>
    <span class="labelAlt">{{ "Authority" | trans }}:</span>
      {% if layer.authority is defined %}
        <ul>
        {% for authority in layer.authority %}
          <li>
            <span class="metaText">
        {{ "Url" | trans }} {{ authority.url }}
        {% if authority.name is defined %}
        {{ "Name" | trans }} {{ authority.name }}<br/>
        {% endif%}
        {% endfor %}
        </ul>
      {% endif%}
  </li>
  <li>
    <span class="labelAlt">{{ "MetadataUrl" | trans }}:</span>
    {% if layer.metadataUrl is defined %}
      <ul>
      {% for metadataUrl in layer.metadataUrl %}
        <li>
          <span class="metaText">
            {{ metadataUrl.type }} {{ metadataUrl.onlineresource.format }} {{ metadataUrl.onlineresource.href }}
          </span>
        </li>
      {% endfor %}
      </ul>
    {% endif%}
  </li>
  <li>
    <span class="labelAlt">{{ "Dimension" | trans }}:</span>
    {% if layer.dimension is defined %}
      <ul>
      {% for dimension in layer.dimension %}
        <li>
          <span class="metaText">
            {{ dimension.name }} {{ dimension.units }} {{ dimension.unitSymbol }}
            {{ dimension.default }} {{ dimension.multipleValues }} {{ dimension.nearestValue }}
            {{ dimension.current }} {{ dimension.extentValue }}
          <span>
        </li>
      {% endfor %}
      </ul>
    {% endif%}
  </li>
  <li>
    <span class="labelAlt">{{ "Extent" | trans }}:</span>
    {% if layer.extent is defined %}
      <ul>
      {% for extent in layer.extent %}
        <li>
          <span class="metaText">
            {{ extent.name }} {{ extent.default }} {{ extent.multipleValues }}
            {{ extent.nearestValue }} {{ extent.current }} {{ extent.extentValue }}
          <span>
        </li>
      {% endfor %}
      </ul>
    {% endif%}
  </li>
  <li>
    <span class="labelAlt">{{ "DataUrl" | trans }}:</span>
    {% if layer.dataUrl is defined %}
      <ul>
      {% for dataUrl in layer.dataUrl %}
        <li>
          <span class="metaText">
            {{ dataUrl.format }} {{ dataUrl.href }}
          <span>
        </li>
      {% endfor %}
      </ul>
    {% endif%}
  </li>
  <li>
    <span class="labelAlt">{{ "FeatureListUrl" | trans }}:</span>
    {% if layer.featureListUrl is defined %}
      <ul>
      {% for featureUrl in layer.featureListUrl %}
        <li>
          <span class="metaText">
            {{ featureUrl.format }} {{ featureUrl.href }}
          <span>
        </li>
      {% endfor %}
      </ul>
    {% endif%}
  </li>

  {% if layer.sublayer|length > 0 %}
    {% for sublayer in layer.sublayer %}
      <li>
        {% include "MapbenderWmsBundle:Repository:layer.html.twig"  with {'layer': sublayer, 'itemLevel': itemLevel + 1 }%}
      </li>
    {% endfor %}
  {% endif %}
</ul>