{% extends 'MapbenderWmsBundle:WMS:base.html.twig' %} 

{% block title %}{% trans %}Add WMS{% endtrans %}{% endblock %}
{% block heading %}WMS add{% endblock %}

{% block stylesheets %}
<link rel="stylesheet" href="{{ asset('bundles/mbwms/css/style.css') }}" type="text/css"/>
{% endblock %}

{% block content %}
    <div>
        <form class="wmsregister" name="url" action="{{ path('mapbender_wms_wms_preview') }}" method="POST">
            
			 <fieldset>
   			<legend>Capabilities-URL laden</legend>
			<div>
                <label for="getcapa_url">{% trans %}Capabilities URL{% endtrans %}</label> 
                <input type="url" class="url" name="getcapa_url" id="getcapa_url" value="{{  getcapa_url }}" />
            </div>
            <div>
                <label for="http_user">{% trans %}HTTP User{% endtrans %}</label>
                <input type="text" name="http_user" />
            </div>
            <div>
                <label for="http_password">{% trans %}HTTP Password{% endtrans %}</label>
                <input type="password" name="http_password" />
            </div>
    		<input type="submit" name="save" value="{% trans %}Load{% endtrans %}" /> 			
        	</fieldset>
        </form>
        <div id="wmspreview" title="WMS Preview" style="display: none">
            <p>{% trans %}Loading WMS{% endtrans %} <img src="{{ asset('bundles/mbwms/img/spinner.gif') }}" alt="{{ "loading"|trans }}..." title="{{ "loading"|trans}}... "/></p>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script src="{{asset('bundles/mbwms/js/preview.js') }}"></script>	
{% endblock %}
