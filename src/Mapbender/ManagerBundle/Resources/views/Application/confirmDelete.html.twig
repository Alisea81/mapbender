{% extends "MapbenderManagerBundle::manager.html.twig" %}

{% set application_title = application.title %}
{% set application_id = application.id %}

{% block title %}{% trans %}Delete application %application_title%{% endtrans %}{% endblock %}

{% block manager_css %}
<link rel="stylesheet" type="text/css" href="{{ asset('bundles/mapbendermanager/css/jquery-ui-1.8.16.css') }}" />
{% endblock %}

{% block manager_js %}
<script type="text/javascript" src="{{ asset('bundles/mapbendermanager/js/form.js') }}"></script>
{% endblock %}

{% block manager_content %}

<form id="entity-delete" action="{{ path('mapbender_manager_application_delete', { 'id': application.id }) }}" method="post" {{ form_enctype(form)}}>
    <header>
    {% trans %}Do you really want to delete the application with the title %application_title% and the id %application_id%?{% endtrans %}
    </header>
    {{ form_widget(form) }}
    <footer class="actions">
        <input type="submit" class="danger" value="{{ 'Delete' | trans }}" />
        <a href="{{ url('mapbender_manager_application_index') }}">{{ 'Cancel' | trans}}</a>
    </footer>
</form>

{% endblock %}
