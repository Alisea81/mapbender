{% form_theme form 'MapbenderManagerBundle::form_theme.html.twig' %}
<header class="form-help">
{% trans %}
Required fields are marked with dark labels, while optional fields have lighter labels.
{% endtrans %}
</header>
<div class="tabbed">
    <ul class="form-tabs">
        <li><a href="#application-basics">{{ 'Base data' | trans}}</a></li>
        <li><a href="#application-elements">{{ 'Elements' | trans}}</a></li>
        <li><a href="#application-layersets">{{ 'Layersets' | trans}}</a></li>
        <li><a href="#application-permissions">{{ 'Permissions' | trans}}</a></li>
    </ul>

    <section id="application-basics">
        {{ form_row(form.title) }}
        {{ form_row(form.slug) }}
        {{ form_row(form.description) }}
        {{ form_row(form.template) }}
    </section>

    <section id="application-elements">
        <button class="collection-add" data-type="application_elements">{{ 'Add element' | trans }}</button>
        {{ form_row(form.elements) }}
    </section>

    <section id="application-layersets">
        Layersets
    </section>

    <section id="application-permissions">
        Permissions
    </section>
</div>

{{ form_row(form._token) }}

{###############################################################################
    Render any remaining fields inside the rulers to make you aware you forgot
    them
###############################################################################}
{% set form_rest = form_rest(form) %}
{% if form_rest %}
<hr />
{{ form_rest | raw }}
<hr />
{% endif %}

