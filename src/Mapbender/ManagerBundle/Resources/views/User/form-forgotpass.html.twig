{% extends "MapbenderCoreBundle::backend.html.twig" %}

{% block title %} {{ 'Require password' | trans}} {% endblock %}

{% block wrapperclass %}hero-unit{% endblock %}

{% block content %}
<h1>{{ 'Forgot password' | trans}}</h1>
<form action="{{ path('mapbender_manager_user_forgotpass') }}" method="post" name="{{ form_name }}" {{ form_enctype(form)}} class="well" autocomplete="off">
    {% if form_errors(form) %}
    <div class="alert alert-error">
        {{ form_errors(form) }}
    </div>
    {% endif %}

    {{ form_row(form._token) }}
    
    <header class="form-help">
    {% trans %}
    Required fields are marked with dark labels, while optional fields have lighter labels.
    {% endtrans %}
    </header>
        
    {{ form_row(form.username) }}
    <footer>
        <div class="btn-group">
            <input type="submit" value="{{ 'Require password' | trans}}" class="btn btn-primary"/>
        </div>
    </footer>
</form>
{% endblock %}
