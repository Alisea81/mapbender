{% set title %}{% block title %}{% endblock %}{% endset %}
<!doctype html>
<!--[if lt IE 7]> <html class="no-js lt-ie9 lt-ie8 lt-ie7" lang="en"> <![endif]-->
<!--[if IE 7]>    <html class="no-js lt-ie9 lt-ie8" lang="en"> <![endif]-->
<!--[if IE 8]>    <html class="no-js lt-ie9" lang="en"> <![endif]-->
<!-- Consider adding a manifest.appcache: h5bp.com/d/Offline -->
<!--[if gt IE 8]><!--> <html class="no-js" lang="en"> <!--<![endif]-->
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
  <title>{{ title }} - Mapbender Manager</title>
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <link rel="stylesheet" href="{{ asset('bundles/mapbendermanager/css/h5bp.css') }}">
  <link rel="stylesheet" href="{{ asset('bundles/mapbendermanager/css/style.css') }}">
  <link rel="stylesheet" href="{{ asset('bundles/mapbendermanager/css/jquery-ui-1.8.16.css') }}">
  <!--link rel="stylesheet" href="{{ asset('bundles/arsgeograficaentitypager/pager.css') }}"-->
  <script src="{{ asset('bundles/mapbendermanager/js/modernizr-2.0.6.min.js') }}"></script>
  {% block manager_css %}{% endblock %}
</head>

<body>
    <div id="wrapper">
        <header role="navigation">
        <h1><a href="{{ path('mapbender_manager_manager_index') }}"><img alt="Mapbender Manager" src="{{ asset('bundles/mapbendermanager/logo.png')}}" /></a></h1>

            <div>
                <p>{% trans %}Hello{% endtrans %} <em><a href="#">user</a></em>.</p>
                <a href="#" id="user-logout">{% trans %}Logout{% endtrans %}</a>
            </div>

            <form id="manager-search" action="." method="post">
                <input type="text" value="{{ "search"|trans }}"/>
            </form>

            <nav>
                {% render "MapbenderManagerBundle:Manager:menu" with { "request": app.request } %}
            </nav>
        </header>

        <div role="main">
            <h1>{{ title|trans }}</h1>

            {% if app.session.hasFlash('error') %}
            <div id="flash-error" class="flash ui-state-error ui-corner-all">
                {{ app.session.flash('error') | trans }}
            </div>
            {% endif %}

            {% if app.session.hasFlash('notice') %}
            <div id="flash-notice" class="flash ui-state-highlight ui-corner-all">
                {{ app.session.flash('notice') | trans }}
            </div>
            {% endif %}

            {% block manager_content %}{% endblock %}
        </div>
    </div>
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js"></script>
    <script>window.jQuery || document.write('<script src="{{ asset('bundles/mapbendermanager/js/jquery-1.7.1.js') }}"><\/script>')</script>
    <script src="//ajax.googleapis.com/ajax/libs/jqueryui/1.8.16/jquery-ui.min.js"></script>
    <script>window.jQuery.ui || document.write('<script src="{{ asset('bundles/mapbendermanager/js/jquery-ui-1.8.16.min.js') }}"><\/script>')</script>
    {% block manager_js %}{% endblock %}
</body>
</html>

