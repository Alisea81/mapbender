{% extends "FOMManagerBundle::manager.html.twig" %}

{% block title %}{{ 'mb.manager.admin.source.new.add' | trans }}{% endblock %}

{% block css %}
  {{parent()}}
  {% stylesheets filter="compass,cssrewrite"
    "bundles/mapbendermanager/sass/manager/services.scss"
  %}
    <link rel="stylesheet" href="{{ asset_url }}" />
  {% endstylesheets %}
{% endblock %}

{% block manager_content %}
<div id="serviceTabContainer" class="tabContainer">
<ul class="tabs">
{% for manager in managers %}
<li id="tab{{ manager.id }}" class="tab{% if loop.first %} active{% endif %}">{{ manager.label }}</li>
{% endfor %}
</ul>
{% for manager in managers %}
<div id="container{{ manager.id }}" class="container serviceAddBox{% if loop.first %} active{% endif %}">
  {% render controller(manager.startAction) %}
</div>
<div class="clearContainer"></div>
{% endfor %}
</div>
<div class="clearContainer"></div>
{% endblock %}
