{% if configuration.group is defined %}
<div class="mb-element mb-element-button{% if configuration.icon is defined %} mb-element-button-icon{% endif %} mb-element-{{ classNameLower }}" id="{{ id }}">
    <input type="radio" name="{{ configuration.group }}" id="{{ id }}" name="{{ id }}"/>
    <label for="{{ id }}">{{ label }}</label>
</div>
{% else %}
<button class="mb-element mb-element-button {{ classNameLower }}" id="{{ id }}">{{ label }}</button>
{% endif %}
