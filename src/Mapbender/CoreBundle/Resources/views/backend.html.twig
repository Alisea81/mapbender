{% extends '::base.html.twig' %}

{% block baseHead %}
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <!--[if IE]>
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <![endif]-->
    <title>{% block title %}{% endblock %} - {{ server_name }}</title>

    {% block head %}{% endblock %}

    <link rel="stylesheet" type="text/css" href="{{ asset('bundles/mapbendercore/reset.css') }}" />
    <link rel="stylesheet" type="text/css" href="{{ asset('bundles/mapbendercore/backend.css') }}" />
    <link rel="stylesheet" type="text/css" href="{{ asset('bundles/mapbendercore/mapquery/lib/jquery/themes/base/jquery-ui.css') }}" />

    {% block css %}{% endblock %}
{% endblock %}

{% block baseContent %}
    <header>
    <h1><img alt="{{ server_name }}" src="{{ asset('bundles/mapbendercore/logo.png') }}"></h1>
    </header>

    <nav>
        <!-- TODO: Make menu more dynamic -->
        <ul class="clearfix">
            <li><a href="{{ path('mapbender_core_application_list') }}" id="mapbendercore-applications-admin">Apps</a></li>
            <li><a href="{{ path('mapbender_wms_wms_index')}}" id="mapbendercore-services-admin">Services</a></li>
            <li><a href="" id="mapbendercore-user-admin">Users</a></li>
            <li><a href="" id="mapbendercore-help-book">Handbook</a></li>
            <li><a href="" id="mapbendercore-user-account">My Account</a></li>
            <li><a href="" id="mapbendercore-user-logout">Logout</a></li>
        </ul>
    </nav>

    {% block content %}{% endblock %}

    <script type="text/javascript" src="{{ asset('bundles/mapbendercore/mapquery/lib/jquery/jquery-1.4.4.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/mapbendercore/mapquery/lib/jquery/ui/jquery-ui.js') }}"></script>

    {% block js %}{% endblock %}
{% endblock %}

