{% extends "MapbenderCoreBundle::layout.html.twig" %}

{% block title %}Login{% endblock %}

{% block content %}
{% if error %}
<div class="error">{{ error.message }}</div>
{% endif %}
<form action="{{ path("_security_check") }}" method="post" id="login">
	<div class="form-field form-text">
		<label for="username">Username</label>
		<input id="username" name="_username" value="{{ last_username }}" />
	</div>
	<div class="form-field form-password">
		<label for="password">Password</label>
		<input type="password" id="password" name="_password" />
	</div>
	<input type="submit" class="form-button" value="Login" />
</form>
{% endblock %}
