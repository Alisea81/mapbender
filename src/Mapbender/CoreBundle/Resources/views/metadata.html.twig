        <script type="text/javascript" src="../extensions/jquery-ui-1.8.1.custom/js/jquery-1.4.2.min.js"></script>
        <script type="text/javascript" src="../extensions/jquery-ui-1.8.1.custom/js/jquery-ui-1.8.1.custom.min.js"></script>
        <script type="text/javascript">
            /*$(function(){
                $("#tabs").tabs();
            });*/
        </script-->
    </head>
    <body>
{% endif %}
        <div class="tabContainerAlt">
        {% set prefix='mb.core.metadata.section.' %}
        {% if metadata.display == 'tabs' %}
            <ul class="tabs">
            {% for section in metadata.sections %}
                <li id="metadatatab{{loop.index}}" class="metadatatab{% if loop.first %} active{% endif %} tab">{{ prefix~section.title | trans}}</li>
            {% endfor %}
            </ul>
        {% endif %}
        {% for section in metadata.sections %}
            {% if metadata.display != 'tabs' %}
            {% set vt=prefix~section.title %}
            <div id="metadatatab{{loop.index}}" class="metadatatab{% if loop.first %} active{% endif %} tab">{{ vt | trans}}</div>
            {% endif %}
            <div id="metadatacontainer{{loop.index}}" class="metadatacontainer{% if loop.first %} active{% endif %}">
            {% for item in section.items %}
                {% for key,val in item %}
                {% set vt=prefix~section.title~'.'~key %}
                <div class="metaText">{{ vt | trans}}:</div>
                <div class="metaText">{{val}}</div>
                <div class="clearContainer"></div>
                {% endfor %}
            {% endfor %}
            </div>   
        {% endfor %}
        </div>
{% if metadata.content == 'html' %}        
    </body>
</html>
{% endif %}